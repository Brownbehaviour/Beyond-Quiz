    <div class="quiz-container" id="quiz-box">
        <h1>Beyond Protocol Mastery</h1>
        <p class="subtitle">Test your knowledge on the future of Bitcoin</p>
        
        <div class="progress-bar">
            <div class="progress-fill" id="progress"></div>
        </div>

        <div id="quiz-content">
            <div class="question" id="question-text">Loading...</div>
            <div class="options" id="options-container"></div>
            <div class="feedback" id="feedback-text"></div>
        </div>
    </div>

    <div class="quiz-container result-screen" id="result-box">
        <h1>Quiz Completed</h1>
        <p>Your Bitcoin Mastery Score:</p>
        <div class="score-display" id="final-score">0/5</div>
        <p id="result-message">Not bad, but you can do better.</p>
        
        <button class="cta-btn" onclick="shareResult()">Share Score on X</button>
        <button class="btn" style="margin-top:10px; text-align:center;" onclick="location.reload()">Try Again</button>
    </div>

    <script>
        const quizData = [
            {
                question: "Most bridges are Bi-directional. What makes 'Beyond' unique in the crypto market?",
                options: ["It is only for Ethereum", "It is the first Tri-directional bridge", "It has no fees", "It replaces Bitcoin mining"],
                correct: 1,
                explanation: "Correct! Beyond connects external chains AND internal Bitcoin layers (Runes, BRC-20) simultaneously."
            },
            {
                question: "Bitcoin is a $1.3 Trillion asset. What percentage of that value is currently active on-chain?",
                options: ["25%", "10%", "5%", "0.06%"],
                correct: 3,
                explanation: "Exactly. Only 0.06% is active. Beyond unlocks the other 99.94% for DeFi."
            },
            {
                question: "If I have $ORDI (BRC-20) and want to swap it for Runes $ORDI, where do I have to go?",
                options: ["A centralized exchange", "Stay on Bitcoin L1 using Beyond", "Wrap it to Ethereum first", "Sell it for USD"],
                correct: 1,
                explanation: "Spot on. Beyond allows seamless swaps between standards without leaving Bitcoin L1."
            },
            {
                question: "Beyond uses which technology to ensure secure Omnichain interoperability?",
                options: ["LayerZero", "Polygon Bridge", "Optimism", "Solana Wormhole"],
                correct: 0,
                explanation: "Yes! Beyond integrates LayerZero to connect Bitcoin to Ethereum, Arbitrum, and 70+ chains."
            },
            {
                question: "What is the name of the universal wrapper Beyond uses to unify Bitcoin liquidity?",
                options: ["wBTC", "tBTC", "bBTC", "RenBTC"],
                correct: 2,
                explanation: "Correct. bBTC serves as the universal wrapper connecting all chains."
            }
        ];

        let currentQuestion = 0;
        let score = 0;

        const questionText = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const feedbackText = document.getElementById('feedback-text');
        const progressFill = document.getElementById('progress');
        const quizBox = document.getElementById('quiz-box');
        const resultBox = document.getElementById('result-box');
        const finalScore = document.getElementById('final-score');
        const resultMessage = document.getElementById('result-message');

        function loadQuestion() {
            const currentData = quizData[currentQuestion];
            questionText.innerText = currentData.question;
            optionsContainer.innerHTML = '';
            feedbackText.style.display = 'none';
            feedbackText.innerText = '';
            
            // Update Progress Bar
            const progress = ((currentQuestion) / quizData.length) * 100;
            progressFill.style.width = `${progress}%`;

            currentData.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.innerText = option;
                button.classList.add('btn');
                button.onclick = () => checkAnswer(index, button);
                optionsContainer.appendChild(button);
            });
        }

        function checkAnswer(selectedIndex, button) {
            const currentData = quizData[currentQuestion];
            const buttons = optionsContainer.querySelectorAll('.btn');
            
            // Disable all buttons
            buttons.forEach(btn => btn.disabled = true);

            if (selectedIndex === currentData.correct) {
                button.classList.add('correct');
                score++;
                feedbackText.innerText = currentData.explanation;
            } else {
                button.classList.add('wrong');
                buttons[currentData.correct].classList.add('correct');
                feedbackText.innerText = "Wrong. " + currentData.explanation;
            }

            feedbackText.style.display = 'block';
            feedbackText.style.color = selectedIndex === currentData.correct ? '#00c853' : '#ccc';

            setTimeout(() => {
                currentQuestion++;
                if (currentQuestion < quizData.length) {
                    loadQuestion();
                } else {
                    showResult();
                }
            }, 2500); // 2.5 second delay to read the explanation
        }

        function showResult() {
            quizBox.style.display = 'none';
            resultBox.style.display = 'block';
            finalScore.innerText = `${score}/${quizData.length}`;
            
            if (score === 5) {
                resultMessage.innerText = "You are a Bitcoin Whale! ðŸ‹ You understand the future of interoperability.";
            } else if (score >= 3) {
                resultMessage.innerText = "Solid knowledge! You're ready to bridge.";
            } else {
                resultMessage.innerText = "You might be fading the future. Read the Beyond docs!";
            }
        }

        function shareResult() {
            const text = `I just scored ${score}/5 on the Beyond Protocol Mastery Quiz. \n\nAre you bullish on Bitcoin Interoperability or are you asleep? ðŸŸ§ \n\nTest your knowledge here: [INSERT YOUR GITHUB LINK HERE] \n\n@Beyond_Tech #Bitcoin #DeFi`;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`;
            window.open(url, '_blank');
        }

        // Initial Load
        loadQuestion();
    </script>
</body>
</html>
